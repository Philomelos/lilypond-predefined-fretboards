%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%% SCORE DEFINITIONS %%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


\bookpart {
     %%{
  \score {
    <<    
      \new ChordNames {
        \octavesMixedShapesInC
      }
      \new FretBoards {
        \octavesMixedShapesInC
      }
      \new Voice = "staff" <<
        \clef "treble_8"
        \octavesMixedShapesInC
      >>
      \new Lyrics \lyricsto staff \octavesMixedShapesInCDescription
      \new TabStaff {
        \octavesMixedShapesInC
      }
    >>
    \header {
      title = "Octaves in C (Mixed shapes)"
      %subtitle = "(Root position)"
      subsubtitle = "(Chords of two and three notes)"
%      subtitle = "Chords of two and three notes"
 %     piece = "(Octave on the top)"
    }
  }
%}
%%{
  \score {
    <<    
      \new ChordNames {
        \octavesTwoNotes
      }
      \new FretBoards {
        \cShape
        \octavesTwoNotes
      }
      \new Staff {
        \clef "treble_8"
        \cShape
        \octavesTwoNotes
      }
      \new TabStaff {
        \cShape
        \octavesTwoNotes
      }
    >>
    \header {
      title = "Octaves (Movable C-shape)"
%      subtitle = "(Root position)"
      subsubtitle = "(Chords of two notes)"
%      piece = "(Octave on the top)"
    }
  }
%}
%%{
  \score {
    <<    
      \new ChordNames {
        \octavesTwoNotes
      }
      \new FretBoards {
        \aShape
        \octavesTwoNotes
      }
      \new Staff {
        \clef "treble_8"
        \aShape
        \octavesTwoNotes
      }
      \new TabStaff {
        \aShape
        \octavesTwoNotes
      }
    >>
    \header {
      title = "Octaves (Movable A-shape)"
%      subtitle = "(Root position)"
      subsubtitle = "(Chords of two notes)"
%      piece = "(Octave on the top)"
    }
  }
%}
%{
  \score {
    <<    
      \new ChordNames {
        \octavesGShape
      }
      \new FretBoards {
        \octavesGShape
      }
      \new Staff {
        \clef "treble_8"
        \octavesGShape
      }
      \new TabStaff {
        \octavesGShape
      }
    >>
    \header {
      title = "Octaves (G-shape)"
      subtitle = "(Root position)"
      subsubtitle = "(Chords of two notes)"
      piece = "(Octave position)"
    }
  }
%}
%{
  \score {
    <<    
      \new ChordNames {
        \octavesEShape
      }
      \new FretBoards {
        \octavesEShape
      }
      \new Staff <<
        \clef "treble_8"
        \octavesEShape
      >>
      \new TabStaff  <<
        \octavesEShape
      >>
    >>
    \header {
      title = "Octaves (E-shape)"
      subtitle = "(Root position)"
      subsubtitle = "(Chords of two notes)"
      piece = "(Octave position)"
    }
  }
%}
%{
  \score {
    <<    
      \new ChordNames {
        \octavesEShapeThreeNotesChordSymbols
      }
      \new FretBoards {
        \octavesEShapeThreeNotes
      }
      \new Staff <<
        \clef "treble_8"
        \octavesEShapeThreeNotes
      >>
      \new TabStaff  <<
        \octavesEShapeThreeNotes
      >>
    >>
    \header {
      title = "Octaves (E-shape)"
      subtitle = "(Root position)"
      subsubtitle = "Chords of three notes"
      piece = "(Octave position)"
    }
  }
%}
%{
  \score {
    <<    
      \new ChordNames {
